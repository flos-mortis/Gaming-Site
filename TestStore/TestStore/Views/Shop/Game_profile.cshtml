@{
    ViewData["Title"] = "Game";
    Layout = "_Layout";
}
<div class="wrap masthead">
    <div class="ja-masthead">
        <div id="masthead-bg" style="background-image: url(../image/masthead.jpg)">
            <div class="container">
                <div class="masthead-detail">
                    <h3 class="masthead-title">
                        Game Name
                    </h3>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="mainbody" class="wrap mainbody one-sidebar-left">
    <div class="container">
        <div class="row equal-height">
            @await Html.PartialAsync("../Shared/_Sidebar")
            <div id="content" class="content col col-xs-12 col-sm-8 col-sm-push-4 col-md-9 col-md-push-3" style="padding-top: 58.57142858px;">
                <div class="prdouct-details">
                    <div class="product-container" style="overflow:auto" ;>
                        <div class="product-media-container">
                            <img src="~/image/destiny_game.jpg" />
                        </div>
                        <div class="product-details-container">
                            <h1>Game #1</h1>
                            <div class="spacer-rating">
                                <div class="rating-mini">
                                    <span class="active"></span>
                                    <span class="active"></span>
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                </div>
                                <div class="product-price-block">
                                    <div class="base-price price-block">
                                        <span class="price-desc">
                                            Base price:
                                        </span>
                                        <span class="base-price-val" style="font-size: 18px;">
                                            $44.5
                                        </span>
                                    </div>
                                    <div class="sale-price price-block">
                                        <span class="price-desc">
                                            Sales price:
                                        </span>
                                        <span class="sale-price-val" style="font-size: 18px;">
                                            $44.5
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="product-short-desc">
                                This game is about ummmmm ummmmmmmmmmm ummmm ummmm ummmmm
                            </div>
                            <div class="product-fields">
                                <span class="product-fields-title-wrapper">
                                    Platforms
                                </span>
                                <div class="platforms-field">
                                    <span>
                                        <i class="fa fa-android"></i>
                                        <i class="fa fa-apple"></i>
                                        <i class="fa fa-windows"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="spacer-buy-area">
                                <form method="post" action="#">
                                    <div class="addtocart-bar">
                                        <span class="addtocart-button">
                                            <input type="submit" value="Add to Cart" style="background: linear-gradient(#67c1f5,#41b1f2); border: 1px solid #67c1f5;" />
                                        </span>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="productdetails-tabs">
                        <ul class="nav nav-tabs">
                            <li>
                                <a class="nav-link active" data-toggle="tab" href="#desc">Description</a>
                            </li>
                            <li>
                                <a class="nav-link" data-toggle="tab" href="#review">Reviews</a>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div id="desc" class="tab-pane active">
                                <div class="product-desc">
                                    <p style="color: #ffffff">
                                        This cool game is about ummm
                                    </p>
                                </div>
                            </div>
                            <div id="review" class="tab-pane fade">
                                <div class="customer-reviews">
                                    <div class="list-reviews">
                                        <div class="normal">
                                            <span class="date">Monanjsy, 21 daevember 2019</span>
                                            <div class="rating-mini">
                                                <span class="active"></span>
                                                <span class="active"></span>
                                                <span></span>
                                                <span></span>
                                                <span></span>
                                            </div>
                                            <blockquote>
                                                This game is KAL
                                            </blockquote>
                                            <span>MinachevGaymDev_2001</span>
                                        </div>
                                        <div class="normal">
                                            <span class="date">Monanjsy, 21 daevember 2019</span>
                                            <div class="rating-mini">
                                                <span class="active"></span>
                                                <span class="active"></span>
                                                <span></span>
                                                <span></span>
                                                <span></span>
                                            </div>
                                            <blockquote>
                                                This game is KAL
                                            </blockquote>
                                            <span>MinachevGaymDev_2001</span>
                                        </div>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <div class="normal leave-review">
                                                <p>Leave your review</p>
                                                <textarea class="review-field"></textarea>
                                                <input type="submit" class="btn btn-primary" value="Submit">
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
