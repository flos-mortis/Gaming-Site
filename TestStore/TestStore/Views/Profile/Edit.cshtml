@{
    ViewData["Title"] = "My profile";
    Layout = "_Layout";
}
@model TestStore.ViewModels.EditProfileViewModel
    <form asp-action="Edit" asp-controller="Profile">
        <div id="mainbody" class="wrap mainbody profile">
            <div class="container">
                <div class="row equal-height">
                    <div id="content" class="content" style="padding-top: 58.57142858px;">
                        <div class="module-left-side-content" style="width:30%;">
                            <div class="module avatar-module">
                                <img src="~/image/ava-example.jpg" />
                                <input asp-for="Picture" type="file" style="margin-top: 10px;" value="Edit avatar">
                            </div>
                        </div>
                        <div class="module-right-side-content" style="width:65%;">
                            <div class="module-profile-content" style="border-right: none">
                                <div class="username">
                                    <span>Username:</span>
                                    <input type="text" asp-for="UserName" required />
                                </div>
                                <div class="user-info" style="border-bottom: none;">
                                    <div class="edit-info-fields">
                                        <div class="email info-field">
                                            <span>Email:</span>
                                            <input type="email" asp-for="Email" required />
                                        </div>
                                        <div class="gender info-field">
                                            <span>Gender:</span>
                                            <select required>
                                                <option>Currently is</option>
                                                <option>Not</option>
                                                <option>Working</option>
                                            </select>
                                        </div>
                                        <div class="country info-field">
                                            <span>Country:</span>
                                            <input type="text" asp-for="Country"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="user-about">
                                    <div class="normal">
                                        <p>About:</p>
                                        <textarea asp-for="About"></textarea>
                                    </div>
                                </div>
                                <input type="submit" class="btn btn-primary" value="Save">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
