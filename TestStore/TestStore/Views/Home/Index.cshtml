@model IEnumerable<Game>
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout_homepage";
}
<div id="mainbody" class="wrap mainbody one-sidebar-left">
    <div class="container">
        <div class="row equal-height">
            <div class="sidebar sidebar-left col col-xs-12 col-sm-4 col-sm-pull-8 col-md-3 col-md-pull-9">
                <div class="module genre-module">
                    <h3 class="module-title">
                        <span>
                            Browse by genre
                        </span>
                    </h3>
                    <div class="module-ct">
                        <ul class="genre-menu">
                            <li>
                                <div>
                                    <a href="">Action</a>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <a href="">Adventure</a>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <a href="">Casual</a>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <a href="">Free To Play</a>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <a href="">Indie</a>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <a href="">Massively Multiplayer</a>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <a href="">Racing</a>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <a href="">RPG</a>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <a href="">Simulation</a>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <a href="">Sport</a>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <a href="">Strategy</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="module hotgame-module">
                    <h3 class="module-title">
                        <span>
                            Hot game
                        </span>
                    </h3>
                    <div class="module-ct">
                        <div class="spacer">
                            <a asp-controller="Shop" asp-action="Game_Profile" class="feat-prod-img">
                                <img src="~/image/destiny_game.jpg" class="hot-game-img" />
                            </a>
                            <a class="hot-game-title" asp-controller="Shop" asp-action="Game_Profile">СУДЬБА БОГОВ</a>
                            <p class="product-desc">
                                Description
                            </p>
                            <div class="hot-game-link">
                                <a asp-controller="Shop" asp-action="Game_Profile" class="btn btn-primary">Product details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="content" class="content col col-xs-12 col-sm-8 col-sm-push-4 col-md-9 col-md-push-3">
                <div class="featured-view">
                    <h4><span>Featured Products</span></h4>
                    <div class="row equal-height equal-height-child">
                        <div class="product vm-col vm-col-3 vertical-separator col">
                            <div class="spacer">
                                @{
                                    foreach (var item in Model)
                                    {
                                        <div class="vm-product-media-container">
                                            <a title="" href="#">
                                                <img class="browseProductImage" src="../image/assassins_creed_chronicles.jpg" />
                                            </a>

                                            <div class="vm-product-descr-container">
                                                <h2>
                                                    @Html.DisplayNameFor(item => item.Name)
                                                </h2>
                                                <div class="platforms-field">
                                                    <span>
                                                        <i class="fa fa-android"></i>
                                                        <i class="fa fa-apple"></i>
                                                        <i class="fa fa-windows"></i>
                                                    </span>
                                                </div>
                                                <p class="product-desc">
                                                    @Html.DisplayNameFor(item => item.Description)
                                                </p>
                                                <div class="product-price-block">
                                                    <div class="base-price price-block">
                                                        <span class="price-desc">
                                                            Base price:
                                                        </span>
                                                        <span class="base-price-val">
                                                            @Html.DisplayNameFor(item => item.Price)
                                                        </span>
                                                    </div>
                                                    <div class="sale-price price-block">
                                                        <span class="price-desc">
                                                            Sales price:
                                                        </span>
                                                        <span class="sale-price-val">
                                                            $44.5
                                                            @Html.DisplayNameFor(item => item.SalePrice)
                                                        </span>
                                                    </div>
                                                    <div class="addtocart-block">
                                                        <form method="post">
                                                            <div class="addtocart-bar">
                                                                <span class="addtocart-button">
                                                                    <input type="submit" value="Add to Cart" />
                                                                </span>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                 }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>