@model Game
@{
    ViewBag.Title = "Добавление продукта";
}
<form asp-action="Create" asp-controller="Games">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" required/>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="number" asp-for="Price" class="form-control" required/>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <textarea type="text" asp-for="Description" class="form-control" required></textarea>
    </div>
    <!--<div class="form-group">
        <label asp-for="GenreId" class="control-label">Цена</label>
        <textarea type="text" asp-for="GenreId" class="form-control" />
    </div> -->
    <div class="form-group">
        <input type="submit" value="SUBMIT" class="btn btn-default" />
    </div>
</form>