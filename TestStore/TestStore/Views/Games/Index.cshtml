@model IEnumerable<Game>
@{
    ViewBag.Title = "Все игры";
}
<a asp-action="Create">Добавить игру</a>
<table class="table">
    @foreach (var item in Model)
    {
        /*<tr>
            <td>@item.Name</td><!--<td>Genre.Name.Where(Genre.Id = item.GenreId)</!--td>-->
        <td>@item.Description</td>
            <td>@item.Price</td>
    </tr>*/
    }
</table>
@foreach (var item in Model)
{
    <div class="product vm-col vm-col-3 vertical-separator col">
        <div class="spacer">
            <div class="vm-product-media-container">
                <a title="" href="#">
                    <img class="browseProductImage" src="../image/assassins_creed_chronicles.jpg" />
                </a>
            </div>
            <div class="vm-product-descr-container">
                <h2>
                    <a>@item.Name</a>
                </h2>
                <div class="platforms-field">
                    <span>
                        <i class="fa fa-android"></i>
                        <i class="fa fa-apple"></i>
                        <i class="fa fa-windows"></i>
                    </span>
                </div>
                <p class="product-desc">
                    @item.Description
                </p>
            </div>
            @{ if (item.SalePrice != 0)
                {
                    <div class="product-price-block">
                        <div class="base-price price-block">
                            <span class="price-desc">
                                Base price:
                            </span>
                            <span class="base-price-val">
                                $@item.Price
                            </span>
                        </div>

                        <div class="sale-price price-block">
                            <span class="price-desc">
                                Sales price:
                            </span>
                            <span class="sale-price-val">
                                $@item.SalePrice
                            </span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="product-price-block">
                        <div class="base-price price-block">
                            <span class="price-desc">
                                Price:
                            </span>
                            <span class="base-price-val" style="text-decoration: none; color: #669900; opacity: 1">
                                $@item.Price
                            </span>
                        </div>
                    </div>
                }
            }
            <div class="addtocart-block">
                <form method="post">
                    <div class="addtocart-bar">
                        <span class="addtocart-button">
                            <input asp-action="AddToCart" asp-controller="Shop" asp-route="@item" type="submit" value="Add to Cart" />
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
}