<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="../image/favicon.ico" rel="shortcut icon" type="image/vnd.microsoft.icon">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../css/site.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.css">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Montserrat:400,700" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
</head>
<body>
    <div class="wrapper homepage">
        <header>
            <div class="container">
                <div class="row">
                    <div class="nav-toggle"><span></span></div>
                    <div class="logo">
                        <div class="logo-image">
                            <a asp-area="" asp-controller="Home" asp-action="Index">
                                <img class="logo-img" src="../image/logo.png">
                            </a>
                        </div>
                    </div>
                    <div class="head-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="head-logout">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <input class="register-switch" type="submit" value="Logout" />
                                </form>
                            </div>
                            <div class="head-cart">
                                <a class="btn btn-cart" asp-controller="Account" asp-action="Index">
                                    <i class="fa fa-user"></i>
                                </a>
                            </div>
                            <div class="head-cart">
                                <a class="btn btn-cart" asp-controller="Shop" asp-action="Cart">
                                    <i class="fa fa-shopping-cart"></i>
                                    <p><span class="total-product">0</span></p>
                                </a>
                            </div>
                            <div class="head-search">
                                <form class="search-box" method="get" asp-controller="Home" asp-action="Index">
                                    <input class="search-txt" name="searchString" type="text" placeholder="Search ...">
                                    <a class="search-btn">
                                        <i class="fa fa-search"></i>
                                    </a>
                                </form>
                            </div>
                        }
                        else
                        {
                            <div class="head-login">
                                <a asp-controller="Account" asp-action="Login">
                                    <input class="register-switch" type="button" value="Sign In" />
                                </a>
                            </div>
                            <div class="head-reg">
                                <a asp-controller="Account" asp-action="Register">
                                    <input class="register-switch" type="button" value="Sign Up" />
                                </a>
                            </div>
                            <div class="head-cart">
                                <a class="btn btn-cart" asp-controller="Shop" asp-action="Cart">
                                    <i class="fa fa-shopping-cart"></i>
                                    <p><span class="total-product">0</span></p>
                                </a>
                            </div>
                            <div class="head-search">
                                <form class="search-box" method="get" asp-controller="Home" asp-action="Index">
                                    <input class="search-txt" name="searchString" type="text" placeholder="Search ...">
                                    <a class="search-btn">
                                        <i class="fa fa-search"></i>
                                    </a>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </header>
        <nav id="mainnav" style="background-color: transparent;">
            @*<input type="checkbox" id="btn-menu" />
            <label for="btn-menu">btn menu</label>*@
            <div class="container">

                <ul id="menu">
                    <li><a asp-controller="Home" asp-action="Index">Home</a>
                    <li><a asp-controller="Games" asp-action="Index">New Releases</a>
                    <li><a asp-controller="News" asp-action="Index">News</a></li>
                    <li class="dropbtn">
                        <a asp-controller="Shop" asp-action="Index" class="dropdown-toggle">Shop<em class="caret"></em></a>
                        <div id="dropdown-content">
                            <ul class="dropdown-left">
                                <li><a href="">Action</a></li>
                                <li><a href="">Adventure</a></li>
                                <li><a href="">Casual</a></li>
                            </ul>
                            <ul class="dropdown-right">
                                <li><a href="">Racing</a></li>
                                <li><a href="">RPG</a></li>
                                <li><a href="">Strategy</a></li>
                            </ul>
                        </div>
                </ul>
            </div>
        </nav>
        <div class="slideshow">
            <div class="owl-carousel owl-theme" style="opacity: 1; display: block;">
                <div class="item">
                    <div class="img-header-top" style="background-image: url(../image/sl-1.jpg);"></div>
                    <div class="img-header" style="background-image: url(../image/sl-1.jpg);"></div>
                    <div class="slider-content container row">
                        <div class="slider-thumb col-sm-4">
                            <img src="~/image/sl-thumb-1.jpg" />
                        </div>
                        <div class="col-sm-8">
                            <h1 class="item-title">Most interesting article will be showing here</h1>
                            <a class="btn btn-primary" href="#">Learn More</a>
                        </div>
                    </div>
                    <div class="img-header-bottom" style="background-image: url(../image/sl-1.jpg);"></div>
                    <div class="img-header-bottom-mask"></div>
                </div>
                <div class="item">
                    <div class="img-header-top" style="background-image: url(../image/sl-2.jpg);"></div>
                    <div class="img-header" style="background-image: url(../image/sl-2.jpg);"></div>
                    <div class="slider-content container row">
                        <div class="slider-thumb col-sm-4">
                            <img src="~/image/sl-thumb-2.jpg" />
                        </div>
                        <div class="col-sm-8">
                            <h1 class="item-title">lorem ipsum or something idk</h1>
                            <a class="btn btn-primary" href="#">Learn More</a>
                        </div>
                    </div>
                    <div class="img-header-bottom" style="background-image: url(../image/sl-2.jpg);"></div>
                    <div class="img-header-bottom-mask"></div>
                </div>
                <div class="item">
                    <div class="img-header-top" style="background-image: url(../image/sl-3.jpg);"></div>
                    <div class="img-header" style="background-image: url(../image/sl-3.jpg);"></div>
                    <div class="slider-content container row">
                        <div class="slider-thumb col-sm-4">
                            <img src="~/image/sl-thumb-3.jpg" />
                        </div>
                        <div class="col-sm-8">
                            <h1 class="item-title">item1</h1>
                            <a class="btn btn-primary" href="#">Learn More</a>
                        </div>
                    </div>
                    <div class="img-header-bottom" style="background-image: url(../image/sl-3.jpg);"></div>
                    <div class="img-header-bottom-mask"></div>
                </div>
                <div class="item">
                    <div class="img-header-top" style="background-image: url(../image/sl-4.jpg);"></div>
                    <div class="img-header" style="background-image: url(../image/sl-4.jpg);"></div>
                    <div class="slider-content container row">
                        <div class="slider-thumb col-sm-4">
                            <img src="~/image/sl-thumb-4.jpg" />
                        </div>
                        <div class="col-sm-8">
                            <h1 class="item-title">item2</h1>
                            <a class="btn btn-primary" href="#">Learn More</a>
                        </div>
                    </div>
                    <div class="img-header-bottom" style="background-image: url(../image/sl-4.jpg);"></div>
                    <div class="img-header-bottom-mask"></div>
                </div>
            </div>
        </div>
        @RenderBody()
        @await Html.PartialAsync("../Shared/_Footer")
    </div>
    <script>
        $('.nav-toggle').on('click', function () {
            $('#menu').toggleClass('active');
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>
    <script src="../js/site.js"></script>
</body>
</html>