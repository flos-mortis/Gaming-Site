        <div class="owl-wrapper">
            <div class="owl-item">
                <div class="item">
                    <div class="img-header-top" style="background-image: url(../image/sl-1.jpg);"></div>
                    <div class="img-header" style="background-image: url(../image/sl-1.jpg);"></div>
                </div>
            </div>
            <div class="owl-item">
                <div class="item">
                    <div class="img-header-top" style="background-image: url(../image/sl-2.jpg);"></div>
                    <div class="img-header" style="background-image: url(../image/sl-2.jpg);"></div>
                </div>
            </div>
            <div class="owl-item">
                <div class="item">
                    <div class="img-header-top" style="background-image: url(../image/sl-3.jpg);"></div>
                    <div class="img-header" style="background-image: url(../image/sl-3.jpg);"></div>
                </div>
            </div>
            <div class="owl-item">
                <div class="item">
                    <div class="img-header-top" style="background-image: url(../image/sl-4.jpg);"></div>
                    <div class="img-header" style="background-image: url(../image/sl-4.jpg);"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    (function ($) {
        jQuery(document).ready(function ($) {
            $("#acm-slideshow-95 .owl-carousel").owlCarousel({
                items: 1,
                singleItem: true,
                itemsScaleUp: true,
                navigation: true,
                navigationText: ["<i class='fa fa-angle-left'></i>", "<i class='fa fa-angle-right'></i>"],
                pagination: true,
                merge: false,
                mergeFit: true,
                slideBy: 1,
                autoPlay: false
            });
        });
    })(jQuery);
</script>